@model IEnumerable<N.G.HRS.Areas.RegisterAndLogin.Models.Account>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "حسابات الموظفين";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanShow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanEdit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanAdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanDelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowMaleImages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowFemaleImages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanShow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanEdit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanAdd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanDelete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowMaleImages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowFemaleImages)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
