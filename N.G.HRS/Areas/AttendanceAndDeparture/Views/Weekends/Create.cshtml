@model N.G.HRS.Areas.AttendanceAndDeparture.Models.Weekends
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../../../dashboard.html"> الرئيسة</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة النظام
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            تهيئة الحظور والانصراف
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            <a asp-action="Index">دليل نماذج الدوام </a>

        </li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SaturDay" /> @Html.DisplayNameFor(model => model.SaturDay)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SunDay" /> @Html.DisplayNameFor(model => model.SunDay)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MonDay" /> @Html.DisplayNameFor(model => model.MonDay)
                </label>   
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tuesday" /> @Html.DisplayNameFor(model => model.Tuesday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Wednesday" /> @Html.DisplayNameFor(model => model.Wednesday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Thursday" /> @Html.DisplayNameFor(model => model.Thursday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Friday" /> @Html.DisplayNameFor(model => model.Friday)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PermanenceModelsId" class="control-label"></label>
                <select asp-for="PermanenceModelsId" class="form-control" asp-items="@(ViewData["permanance"] as SelectList)">
                    <option value="" selected disabled></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PeriodsId" class="control-label"></label>
                <select asp-for="PeriodsId" class="form-control" asp-items="@(ViewData["Periods"] as SelectList) ">
                    <option value="" selected disabled></option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">الرجوع للقائمة</a>

            </div>
        </form>
    </div>
</div>
@* =================
 *@
 
 


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
