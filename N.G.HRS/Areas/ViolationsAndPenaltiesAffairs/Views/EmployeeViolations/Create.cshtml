    <script>

        $(document).ready(function () {
            $('#PenaltiesId').change(function () {

                var id = $(this).val();

                $.ajax({
                    url: '/ViolationsAndPenaltiesAffairs/EmployeeViolations/EmployeeViolations?id=' + id,
                    type: 'GET',
                    success: function (data) {
                        console.log(data);
                        $('#DiscountsId').val(data.value).change();

                    }
                });
            });



        });




    </script>
