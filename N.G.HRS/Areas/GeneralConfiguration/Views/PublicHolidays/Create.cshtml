@model N.G.HRS.Areas.GeneralConfiguration.Models.PublicHolidays

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "الاجازات العامة";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}


<div class="card">
    <div class="card-body">
        <h2 class="card-title">الاجازات العامة</h2>
<div class="row" id="alertHide">
            <div class="col-sm-10 col-md-10">
                <div class="alert alert-warning" >
                    <button type="button" class="alertclose" onclick="alertHide()" data-dismiss="alert" aria-hidden="true">
                        ×
                    </button>
                    <span class="glyphicon glyphicon-record"></span> <strong style="color: black">سيتم إضافة الاجازة السنوية تلقائيا كـ الاتي:</strong>
                    <hr class="message-inner-separator" >
                    <br/>
                    <p style="color: black">الاسم : سنوية |رصيد : نعم  | مدفوع الاجر: نعم | عدد الايام:30 | مدة التدوير 5 سنوات   <br />    لتعديل الاجازة السنوية يرجى العودة <a asp-action="Index" style="border-bottom: 1px solid; color: black;">الى القائمة الرئيسة</a></p>
                </div>
            </div>
    </div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row set mb-3">
                <div class="form-group col-md-8">
                    <label asp-for="HolidayName" class="control-label"></label>
                    <input asp-for="HolidayName" class="form-control" />
                    <span asp-validation-for="HolidayName" class="text-danger"></span>
                </div>
                <div class="form-group form-check col-md-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Balance" /> @Html.DisplayNameFor(model => model.Balance)
                    </label>
                </div>
                <div class="form-group form-check col-md-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Paid" /> @Html.DisplayNameFor(model => model.Paid)
                    </label>
                </div>
            </div>
            <div class="row mb-3">
            <div class="form-group col-md-3">
                <label asp-for="DayCount" class="control-label"></label>
                <input asp-for="DayCount" class="form-control" />
                <span asp-validation-for="DayCount" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="RotationDuration" class="control-label"></label>
                <input asp-for="RotationDuration" class="form-control" />
                <span asp-validation-for="RotationDuration" class="text-danger"></span>
            </div>
            </div>
            <div class="row mb-3">
            <div class="form-group col-md-12">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">الرجوع الى القائمة</a>

            </div>
        </form>
        </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function alertHide() {
            $('#alertHide').hide();
        }
    </script>
}
