@model N.G.HRS.Areas.GeneralConfiguration.Models.Permissions

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "دليل الأذونات";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3>دليل الأذونات</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row set mb-3">
                                <div class="form-group col-md-8">
                                    <label asp-for="PermissionName" class="form-label"></label>
                                    <input asp-for="PermissionName" class="form-control" />
                                    <span asp-validation-for="PermissionName" class="text-danger"></span>
                                </div>
                                <div class=" col-md-1">
                                    </div>
                                <div class="form-group form-check col-md-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="PermissionStatus" /> @Html.DisplayNameFor(model => model.PermissionStatus)
                                    </label>
                                </div>
                            </div>
                            <div class="row set mb-3">
                                <div class="form-group col-md-3">
                                    <label asp-for="PermissionsDuration" class="form-label"></label>
                                    <input asp-for="PermissionsDuration" class="form-control" />
                                    <span asp-validation-for="PermissionsDuration" class="text-danger"></span>
                                </div>
                                <div class=" col-md-2">
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="RepeatPermissionDuringTheMonth" class="form-label"></label>
                                    <input asp-for="RepeatPermissionDuringTheMonth" class="form-control" />
                                    <span asp-validation-for="RepeatPermissionDuringTheMonth" class="text-danger"></span>
                                </div>
                                <div class=" col-md-1">
                                </div>
                                <div class="form-group form-check col-md-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Paid" /> @Html.DisplayNameFor(model => model.Paid)
                                    </label>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Notes" class="form-label"></label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <div class="">
                                <input type="submit" value="جديد" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-light">رجوع للقائمة</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
