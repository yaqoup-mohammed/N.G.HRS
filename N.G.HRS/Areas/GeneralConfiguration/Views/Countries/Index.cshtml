@model IEnumerable<N.G.HRS.Areas.GeneralConfiguration.Models.Country>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "نماذج الدوام";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<hr> <!-- هنا الخط الفاصل -->


<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">بيانات الموظفين</h6>

                <hr style="color: black;">
                <div class="table-responsive">
                    <table class="datatable table  nowrap w-100">
                        <thead>
                            <tr>
                                <th id="nameHeader">
                                    @Html.DisplayNameFor(model => model.Name) <span class="sort-arrow">&#x2191;&#x2193;</span>
                                </th>
                                <th id="notesHeader">
                                    @Html.DisplayNameFor(model => model.Notes) <span class="sort-arrow">&#x2191;&#x2193;</span>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="countryTable">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#search").on("keyup", function () {
                var value = $(this).val().toLowerCase().replace(/\s+/g, '');
                $("#countryTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().replace(/\s+/g, '').indexOf(value) > -1)
                });
            });

            $("#nameHeader").click(function () {
                sortTable(0);
                toggleSortArrow(this);
            });

            $("#notesHeader").click(function () {
                sortTable(1);
                toggleSortArrow(this);
            });

            function sortTable(index) {
                var rows = $('#countryTable tbody tr').get();

                rows.sort(function (a, b) {
                    var A = $(a).children('td').eq(index).text().toUpperCase();
                    var B = $(b).children('td').eq(index).text().toUpperCase();

                    if (A < B) {
                        return -1;
                    }

                    if (A > B) {
                        return 1;
                    }

                    return 0;
                });

                $.each(rows, function (index, row) {
                    $('#countryTable').append(row);
                });
            }

            function toggleSortArrow(header) {
                $(".sort-arrow").html("&#x2193;");
                $(header).find(".sort-arrow").html("&#x2191;");
            }
        });
    </script>
    <style>
        .sticky-header {
            position: sticky;
            top: 0;
            background-color: white;
            z-index: 1000;
            padding: 10px 0;
            margin-top: 20px; /* قم بتعديل هذه القيمة بما يتناسب مع ما ترغب فيه */
        }

        #countryTable tr:hover {
            background-color: #f1f1f1;
        }

        .form-group label {
            font-size: 18px;
            color: #333;
            font-weight: bold;
        }

        #search {
            width: 100%;
            padding: 10px;
            border: 2px solid #ffcc00;
            border-radius: 8px;
            font-size: 16px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .table {
            font-size: 18px;
        }

        .create-btn {
            background-color: #ffcc00;
            border-color: #ffcc00;
            color: #333;
            padding: 8px 16px;
            font-size: 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: inline-block;
        }

            .create-btn:hover {
                background-color: #e6b800;
                border-color: #e6b800;
            }

        .text-right {
            text-align: right;
        }

        .sort-arrow {
            cursor: pointer;
            margin-left: 5px;
        }
    </style>

}
