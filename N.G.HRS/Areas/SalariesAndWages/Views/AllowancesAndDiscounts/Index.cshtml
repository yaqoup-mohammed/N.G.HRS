@model IEnumerable<N.G.HRS.Areas.AalariesAndWages.Models.AllowancesAndDiscounts>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">البدلات والخصميات</h6>

                <hr style="color: black;">
                <div class="table-responsive">
                    <table class="datatable table  nowrap w-100">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Taxable)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AddedToAllEmployees)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CumulativeAllowance)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubjectToInsurance)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Amount)/ @Html.DisplayNameFor(model => model.Percentage)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Currency)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    @if (item.Type != null)
                                    {
                                        @if (item.Type == "Discount")
                                        {
                                            <td>
                                                <h5>خصم</h5>
                                            </td>
                                        }
                                        @if (item.Type == "Allowance")
                                        {
                                            <td>
                                                <h5>بدل</h5>
                                            </td>
                                        }
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Taxable)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AddedToAllEmployees)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CumulativeAllowance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectToInsurance)
                                    </td>
                                    @if (item.Percentage != null)
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Percentage) <span>%</span>
                                        </td>
                                    }
                                    @if (item.Amount != null)
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Currency.CurrencyCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>

    </div>
</div>
