                            <div class="mb-3" >
                                <label asp-for="RetirementInsuranceIncluded" class="form-label"></label>
                                <select asp-for="RetirementInsuranceIncluded" id="Retirement" class="form-control">
                                    <option value="Yes">نعم</option>
                                    <option value="No">لا</option>
                                </select>
                                <span asp-validation-for="RetirementInsuranceIncluded" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <!-- Col -->
                        <div class="col-sm-1" style="display: flex;align-content: center;justify-content: center;align-items: center;">
                            <div class="mb-1">
                                <i data-feather="chevrons-left" id="RetirementWarning" style="color: #e9ecef;"></i>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="mb-4" id="employeePercentageGroup">
                                <label asp-for="PercentageOnEmployee" class="form-label"></label>
                                <input asp-for="PercentageOnEmployee" id="employeePercentage" placeholder="النســــ%ــبة على الموظف" class="form-control" />
