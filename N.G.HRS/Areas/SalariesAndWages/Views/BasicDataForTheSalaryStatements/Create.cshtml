                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>

        // تعيين تاريخ اليوم في حقل Date و FromDate عند تحميل الصفحة
        const fromDate1 = new Date().toISOString().split('T')[0];
        $("#FromFate").val(fromDate1);

    const fromDate = document.getElementById("FromFate");
    const toDate = document.getElementById("ToDate");
    fromDate.addEventListener("change", function () {
        if (toDate.value !=="") {
            if (fromDate.value >= toDate.value) {
                Swal.fire({
                    icon: "error",
                    title: "تاريخ البدء يجب أن يكون اكبر من تاريخ النهاية",
                });
                fromDate.value = "";
            }

        }

    });
    toDate.addEventListener("change", function () {
        if (fromDate.value != null) {
            if (this.value <= fromDate.value) {
                Swal.fire({
                    icon: "error",
                    title: "تاريخ البدء يجب أن يكون اكبر من تاريخ النهاية",
                });
                this.value ="";
            }
        }
        else {
                if (this.value <= fromDate.value) {
                    Swal.fire({
                        icon: "error",
                        title: "تاريخ البدء يجب أن يكون اكبر من تاريخ النهاية",
                    });
                    this.value = "";

                }
        }
    });
        const Health =document.getElementById("Health");
        const Percentagegroup = document.getElementById("Percentagegroup");
        const healthawrning = document.getElementById("healthWarning");
        const submitButton = document.getElementById("submitButton");
        const Percentage = document.getElementById("Percentage");
        const Retirement = document.getElementById("Retirement");
        const employeePercentageGroup = document.getElementById("employeePercentageGroup");
        const employeePercentage = document.getElementById("employeePercentage");
        const IncludesTheWorkShareIn = document.getElementById("IncludesTheWorkShareIn");
        const PercentageOnCompanyGroup = document.getElementById("PercentageOnCompanyGroup");
        const PercentageOnCompany = document.getElementById("PercentageOnCompany");
        const retirementWarning = document.getElementById("RetirementWarning");
        const IncludesTheWorkShareWarning = document.getElementById("IncludesTheWorkShareWarning");
        const TaxFromGroup = document.getElementById("TaxFromGroup");
        const IncludesTax = document.getElementById("includesTax");


        Health.addEventListener("change", function () 
        {
            if (this.value != null) {
                if (this.value == "No") {
                    Percentagegroup.style = `pointer-events: none; filter: none; opacity: .5;`;
                }
                if (this.value == "Yes") {
                    Percentagegroup.style = `pointer-events: all; filter: none; opacity: 1;`;
                }
            }

        });
        //======================================================
    Retirement.addEventListener("change", function () 
    {
            if (this.value != null) {
                if (this.value == "No") {
                    employeePercentageGroup.style = `pointer-events: none; filter: none; opacity: .5;`;
                }
                if (this.value == "Yes") {
                    employeePercentageGroup.style = `pointer-events: all; filter: none; opacity: 1;`;
                }
            }
    });
    //==========================================================
        IncludesTax.addEventListener("change", function () {
            if (this.value != null) {
                if (this.value == "No") {
                    TaxFromGroup.style = `pointer-events: none; filter: none; opacity: .5;`;
                }
                if (this.value == "Yes") {
                    TaxFromGroup.style = `pointer-events: all; filter: none; opacity: 1;`;
                }
            }
    });
    //==========================================================
    IncludesTheWorkShareIn.addEventListener("change", function () {

            if (this.value != null) {
                if (this.value == "No") {
                    PercentageOnCompanyGroup.style = `pointer-events: none; filter: none; opacity: .5;`;
                }
                if (this.value == "Yes") {
                    PercentageOnCompanyGroup.style = `pointer-events: all; filter: none; opacity: 1;`;
                }
            }
        
        });
        //====================================================
    submitButton.addEventListener("click", function () {

            // if (fromDate.value != null || toDate.value != null) {
            //     event.preventDefault();
            //     Swal.fire({
            //         icon: "error",
            //         title: "يجب أدخال الى  تاريخ  !",
            //     });
            // }
            var fromDate = $("#FromFate").val();
            var toDate = $("#ToDate").val();
            if (fromDate === "") {
                Swal.fire({
                    icon: "error",
                    title: "يجب أدخال من تاريخ  !",
                });
            }
            else if (toDate === "") {
                Swal.fire({
                    icon: "error",
                    title: "يجب أدخال الى تاريخ  !",
                });
            }

            if (Health.value == "Yes") 
            {
                if (Percentage.value === "") {
                    healthWarning.style = `color:#940202;`;
                    Swal.fire({
                        icon: "error",
                        title: "يجب إدخال نسبة التامين الصحي",
                    });
                }

            }
            else {
                healthWarning.style = `color: #e9ecef;`;
            }
            //================================================
            if (Retirement.value == "Yes")
            {
                if (employeePercentage.value === "") {
                    retirementWarning.style = `color:#940202;`;
                    
                    Swal.fire({
                        icon: "error",
                        title: "يجب إدخال نسبة التامين التقاعدي",
                    });
                }
            }
            else {
                retirementWarning.style = `color: #e9ecef;`;
            }
            //================================================
            if (IncludesTheWorkShareIn.value == "Yes")
            {
                if (PercentageOnCompany.value === "") {
                    IncludesTheWorkShareWarning.style = `color:#940202;`;
                    Swal.fire({
                        icon: "error",
                        title: "يجب إدخال نسبة التامين التقاعدي على الشركة!",
                    });
                }
            }
            else {
                IncludesTheWorkShareWarning.style = `color: #e9ecef;`;
            }
            //=======================================================
            if(fromDate.value > toDate.value){
                Swal.fire({
                    icon: "error",
                    title: "تاريخ البدء يجب أن يكون اكبر من تاريخ النهاية",
                });
            }
    });
    

    //=================================================================
</script>
}
