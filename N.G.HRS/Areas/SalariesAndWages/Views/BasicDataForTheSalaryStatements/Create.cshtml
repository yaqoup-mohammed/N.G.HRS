                        <div class="col-sm-1">
                            <div class="mb-1">

                            </div>
                        </div>
                        <!-- Col -->
                    </div>
                    <!-- Row -->
                    <!-- Row -->
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="mb-3">

                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="mb-3">
                                <label asp-for="IncludesTheWorkShareInRetirementInsurance" class="form-label"></label>
                                <select asp-for="IncludesTheWorkShareInRetirementInsurance" id="IncludesTheWorkShareIn" class="form-control">
                                    <option value="Yes">نعم</option>
                                    <option value="No">لا</option>
                                </select>
                                <span asp-validation-for="IncludesTheWorkShareInRetirementInsurance" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Col -->
                        
  
                        <div class="col-sm-1" style="display: flex;align-content: center;justify-content: center;align-items: center;">
                            <div class="mb-1">
                                <i data-feather="chevrons-left" id="IncludesTheWorkShareWarning" style="color: #e9ecef;"></i>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="mb-4" id="PercentageOnCompanyGroup">
                                <label asp-for="PercentageOnCompany" class="form-label"></label>
                                <input asp-for="PercentageOnCompany" id="PercentageOnCompany" placeholder=" النســـ%ـبة على الشـــركــــة" class="form-control" />
                                <span asp-validation-for="PercentageOnCompany" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="mb-1">

                            </div>
                        </div>
                    </div>
                    <!-- Row -->
                    <!-- Row -->
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="mb-3">
                                <label asp-for="IncludesTaxCalculation" class="form-label"></label>
                                <select asp-for="IncludesTaxCalculation" id="includesTax" class="form-control">
                                    <option value="Yes">نعم</option>
                                    <option value="No">لا</option>
                                </select>
                                <span asp-validation-for="IncludesTaxCalculation" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="mb-3" id="TaxFromGroup">
                                <label asp-for="TaxFrom" class="form-label"></label>
                                <select asp-for="TaxFrom" class="form-control">
                                    <option value="F1">من صافي الاستحقاق</option>
                                    <option value="F2">من اجمالي الاستحقاق</option>
                                </select>
                                <span asp-validation-for="TaxFrom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="col">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label asp-for="FromDate" class="form-label"></label>
                            <div class="input-group flatpickr flatpickr-date" id="flatpickr-date">
                                <input asp-for="FromDate" id="FromFate" class="form-control" placeholder="أختر التاريخ"
                                       data-input />
                                <span class="input-group-text input-group-addon" data-toggle>
                                    <i data-feather="calendar"></i>
                                </span>
                                <span asp-validation-for="FromDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-2">


                            <label asp-for="ToDate" class="form-label"></label>
                            <div class="input-group flatpickr flatpickr-date" id="flatpickr-date">
                                <input asp-for="ToDate" id="ToDate" class="form-control" placeholder="أختر التاريخ"
                                       data-input />
                                <span class="input-group-text input-group-addon" data-toggle>
                                    <i data-feather="calendar"></i>
                                </span>
                                <span asp-validation-for="ToDate" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="col">

                            </div>
                        </div>

                    </div>
                    <br />
                    <!-- Row -->
                    <!-- Row -->
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="mb-11">
                                <label asp-for="Notes" class="form-label"></label>
                                <input asp-for="Notes" class="form-control" />
