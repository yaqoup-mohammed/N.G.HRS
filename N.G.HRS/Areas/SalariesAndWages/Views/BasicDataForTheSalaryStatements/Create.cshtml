                            </div>
                        </div>

                    </div>
                    <!-- Row -->
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="mb-3">
                                <label asp-for="AllowancesIncluded" class="form-label"></label>
                                <select asp-for="AllowancesIncluded" class="form-control">
                                    <option value="Yes">نعم</option>
                                    <option value="No">لا</option>
                                </select>
                                <span asp-validation-for="AllowancesIncluded" class="text-danger"></span>
                            </div>
                        </div>
