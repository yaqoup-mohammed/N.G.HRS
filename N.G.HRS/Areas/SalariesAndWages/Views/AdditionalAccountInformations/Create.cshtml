@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
        <script>
            $(document).ready(function () {
                const v = new ValidationFromMe();

                function showErrorMessage(message) {
                    Swal.fire({
                        icon: "error",
                        title: message,
                    });
                }

                // تعيين تاريخ اليوم في حقل Date و FromDate عند تحميل الصفحة
                const today = new Date().toISOString().split('T')[0];
                $("#Date").val(today);
                $("#FromDate").val(today);

                // تعيين الوقت الحالي في حقل FromTime عند تحميل الصفحة بتنسيق 12 ساعة
                const now = moment();
                const formattedTime = now.format('hh:mm A');
                $("#FromTime").val(formattedTime);

                $("#FromDate, #ToDate").on("input", function () {
                    var fromDate1 = $("#FromDate").val();
                    var toDate1 = $("#ToDate").val();

                    if (!isNaN(new Date(fromDate1).getTime()) && !isNaN(new Date(toDate1).getTime())) {
                        if (new Date(toDate1) < new Date(fromDate1)) {
                            $("#FromDate, #ToDate").val(""); // إعادة تعيين القيم
                            showErrorMessage("تاريخ النهاية يجب أن يكون أكبر من تاريخ البداية");
                        }
                    }
                });

                $("#NormalCoefficient1, #WeekendLaboratories, #NightPeriodParameter, #LaboratoriesPerDay, #OfficialHolidaysLab").on('input', function () {
                    var value = $(this).val();
                    if (isNaN(value) || parseInt(value) === 0 || parseInt(value) > 10) {
                        showErrorMessage(isNaN(value) ? "الرجاء إدخال قيمة رقمية صحيحة لا يقبل الحروف!" : (parseInt(value) === 0 ? "الصفر غير مقبول!" : "القيمة يجب ألا تزيد عن 10 ساعات!"));
                        $(this).val(''); // إعادة تعيين الحقل
                    }
                });

                $("#FromTime, #ToTime").on('input', function () {
                    var fromTime = $("#FromTime").val();
                    var toTime = $("#ToTime").val();

                    if (fromTime && toTime) {
                        var fromTimeValue = moment(fromTime, 'hh:mm A');
                        var toTimeValue = moment(toTime, 'hh:mm A');
                        if (toTimeValue.isSameOrBefore(fromTimeValue)) {
                            showErrorMessage("وقت النهاية يجب أن يكون أكبر من وقت البداية");
                            $("#ToTime").val(''); // إعادة تعيين حقل "إلى وقت"
                        }
                    }
                });

                $("#AdditionalForm").on('submit', function (event) {
                    event.preventDefault(); // منع إرسال النموذج بشكل افتراضي

                    var normalCoefficient1 = $("#NormalCoefficient1").val();
                    var weekendLaboratories = $("#WeekendLaboratories").val();
                    var fromTime = $("#FromTime").val();
                    var toTime = $("#ToTime").val();
                    var officialHolidaysLab = $("#OfficialHolidaysLab").val();
                    var nightPeriodParameter = $("#NightPeriodParameter").val();
                    var date = $("#Date").val();
                    var taboratoriesPerDay = $("#LaboratoriesPerDay").val();
                    var fromDate = $("#FromDate").val();
                    var toDate = $("#ToDate").val();

                    // تحقق من أن الحقل "Date" يساوي تاريخ اليوم
                    if (date !== today) {
                        showErrorMessage("يجب أن يكون التاريخ هو تاريخ اليوم");
                        return;
                    }

                    if (normalCoefficient1 === "") {
                        showErrorMessage("يجب ادخال المعامل الطبيعي");
                        return;
                    }
                    if (weekendLaboratories === "") {
                        showErrorMessage("يجب ادخال المعامل الاسبوعي");
                        return;
                    }
                    if (fromTime === "") {
                        showErrorMessage("يجب ادخال من وقت");
                        return;
                    }
                    if (toTime === "") {
                        showErrorMessage("يجب ادخال الى وقت");
                        return;
                    }
                    if (officialHolidaysLab === "") {
                        showErrorMessage("يجب ادخال معامل العطلات الرسمية");
                        return;
                    }
                    if (nightPeriodParameter === "") {
                        showErrorMessage("يجب ادخال معامل الفترة الليلية");
                        return;
                    }
                    if (taboratoriesPerDay === "") {
                        showErrorMessage("يجب ادخال المعامل اليومي");
                        return;
                    }
                    if (fromDate === "") {
                        showErrorMessage("يجب تحديد من التاريخ");
                        return;
                    }
                    if (toDate === "") {
                        showErrorMessage("يجب تحديد الى التاريخ");
                        return;
                    }

                    // التحقق من التواريخ عبر AJAX
                    $.ajax({
                        url: "/SalariesAndWages/AdditionalAccountInformations/Check1",
                        type: "GET",
                        data: { from: fromDate, to: toDate },
                        dataType: "json",
                        success: function (data) {
                            switch (data) {
                                case 1:
                                    v.softErrorMessage("اعداد التاريخ هذا موجود مسبقا!!");
                                    break;
                                case 2:
                                    v.softErrorMessage("تاريخ البداية يتداخل مع تاريخ اعداد آخر!!");
                                    break;
                                case 3:
                                    v.softErrorMessage("تاريخ النهاية يتداخل مع تاريخ اعداد آخر!!");
                                    break;
                                case 4:
                                    v.softErrorMessage("تاريخ هذا الاعداد يتداخل مع تاريخ اعداد آخر!!");
                                    break;
                                default:
                                    $("#AdditionalForm")[0].submit(); // إذا لم يكن هناك أي خطأ، أرسل النموذج
                                    return;
                            }
                        },
                        error: function (xhr, status, error) {
                            showErrorMessage("حدث خطأ أثناء معالجة الطلب. حاول مرة أخرى.");
                        }
                    });
                });
            });
        </script>




