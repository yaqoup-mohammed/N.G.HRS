@model N.G.HRS.Areas.AalariesAndWages.Models.EmployeeAccount

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "حسابات الموظفين";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}
<h1>Create</h1>

<h4>EmployeeAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="EmployeeAccountForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" id="EmployeeAccountEmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                    <option value=""> </option>
                    <option value="">اختار</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="FinanceAccountTypeId" class="control-label"></label>
                <select asp-for="FinanceAccountTypeId"id="EmployeeAccountFinanceAccountTypeId" class ="form-control" asp-items="ViewBag.FinanceAccountTypeId">
                    <option value=""> </option>
                    <option value="">اختار</option>
                </select>
                <span asp-validation-for="FinanceAccountTypeId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="FinanceAccountId" class="control-label"></label>
                <select asp-for="FinanceAccountId" id="EmployeeAccountFinanceAccountId" class ="form-control" asp-items="ViewBag.FinanceAccountId">
                    <option value=""> </option>
                    <option value="">اختار</option>
                </select>
                <span asp-validation-for="FinanceAccountId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
@*                 <input type="submit" id="EmployeeAccountForm" value="Create" class="btn btn-primary" />
 *@
                <button type="submit" id="EmployeeAccountForm" class="btn btn-primary routate">حفظ</button>
                <a asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#EmployeeAccountForm").submit(function (event) {
                // event.preventDefault();
                var employeeAccountEmployeeId = $("#EmployeeAccountEmployeeId").val();
                var employeeAccountFinanceAccountTypeId = $("#EmployeeAccountFinanceAccountTypeId").val();
                var employeeAccountFinanceAccountId = $("#EmployeeAccountFinanceAccountId").val();
                if (employeeAccountEmployeeId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار الموظف!",
                    });
                }
                else if (employeeAccountFinanceAccountTypeId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار نوع الحساب!",
                    });
                }
                else if (employeeAccountFinanceAccountId === "") {
                    // عرض رسالة الخطأ
                    Swal.fire({
                        icon: "error",
                        title: "الرجاء اختيار  الحساب!",
                    });
                }
                

                
            });
        });
    </script>

}
