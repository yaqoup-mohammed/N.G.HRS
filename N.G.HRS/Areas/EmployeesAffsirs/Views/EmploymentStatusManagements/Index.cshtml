@model IEnumerable<N.G.HRS.Areas.EmployeesAffsirs.Models.EmploymentStatusManagement>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Active"] = "AddEmployee";
    ViewData["Open"] = "Open2";
    ViewData["OpenOperation"] = "OpenOperation2";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.EmployeeStatus)
            </td> *@
                @switch ( item.EmployeeStatus)
                {
                    case "1":
                        <td >مثبت</td >
               break;
                    case "2":
                        <td >متعاقد</td >
               break;
                    case "3":
                        <td >متدرب</td >
               break;
                    case "4":
                        <td >مستمر</td >
               break;
               case "5":
                        <td >موقف</td >
               break;
               case "6":
                        <td >تم إنهاء الخدمة</td >
               break;
               case "7":
                        <td >حارس أمن</td >
               break;
                    default:
                        break;
                });
            <td>
                @Html.DisplayFor(modelItem => item.StatusDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
