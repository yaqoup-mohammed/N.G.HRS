@model N.G.HRS.Areas.OrganizationalChart.Models.Branches
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}

<h1>Create</h1>

<h4>Branches</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BranchesName" class="control-label"></label>
                <input asp-for="BranchesName" class="form-control" />
                <span asp-validation-for="BranchesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchesAdress" class="control-label"></label>
                <input asp-for="BranchesAdress" class="form-control" />
                <span asp-validation-for="BranchesAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchesPhone" class="control-label"></label>
                <input asp-for="BranchesPhone" class="form-control" />
                <span asp-validation-for="BranchesPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchesEmail" class="control-label"></label>
                <input asp-for="BranchesEmail" class="form-control" />
                <span asp-validation-for="BranchesEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" id="CompanyId" class="form-control" asp-items="@(ViewData["company"] as SelectList)">
                    <option value="">-- أختر الشركة --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" id="CountryId" class="form-control" asp-items="@(ViewData["country"] as SelectList)">
                    <option value="">-- أختر الدولة --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GovernorateId" class="control-label"></label>
                <select asp-for="GovernorateId" id="GovernorateId" class="form-control" asp-items="@(ViewData["governorates"] as SelectList)">
                    <option value="">-- أختر المحافظة --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DirectorateId" class="control-label"></label>
                <select asp-for="DirectorateId" id="DirectorateId" class="form-control" asp-items="@(ViewData["directorates"] as SelectList)">
                    <option value="">-- أختر المديرية --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" id="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("submit").addEventListener("click", function (event) {
            const DirectorateId = document.getElementById("DirectorateId");
            const GovernorateId = document.getElementById("GovernorateId");
            const CountryId = document.getElementById("CountryId");
            const CompanyId = document.getElementById("CompanyId");
            if (DirectorateId.value === "") {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: "error",
                    title: "خطئ....",
                    text: "رجاء أختر المديرية",
                });
            }
            if (GovernorateId.value === "") {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: "error",
                    title: "خطئ....",
                    text: "رجاء أختر المحافظة",
                });
            }
            if (CountryId.value === "") {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: "error",
                    title: "خطئ....",
                    text: "رجاء أختر الدولة",
                });
            }
            if (CompanyId.value === "") {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: "error",
                    title: "خطئ....",
                    text: "رجاء أختر الشركة",
                });
            }
        });
    </script>
}
