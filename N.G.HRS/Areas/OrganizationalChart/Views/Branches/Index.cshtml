@model IEnumerable<N.G.HRS.Areas.OrganizationalChart.Models.Branches>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="space-between">
                    <h3> الفروع</h3>

                    <a asp-action="Create" class="btn btn-primary col-md-1 col-12  ">جديد</a>

                </div>
                <div class="table-responsive">
                    <table id="dataTableExample" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.BranchesName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BranchesAdress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BranchesPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BranchesEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Company)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Governorate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Directorate)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchesName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchesAdress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchesPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchesEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Governorate.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Directorate.Name)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>