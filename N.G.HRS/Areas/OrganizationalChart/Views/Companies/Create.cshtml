@model N.G.HRS.Areas.OrganizationalChart.Models.Company
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}

<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfBusinessActivity" class="control-label"></label>
                <input asp-for="TypeOfBusinessActivity" class="form-control" />
                <span asp-validation-for="TypeOfBusinessActivity" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponyLogo" class="control-label"></label>
                <input asp-for="ComponyLogo" class="form-control" />
                <span asp-validation-for="ComponyLogo" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponyAddress" class="control-label"></label>
                <input asp-for="ComponyAddress" class="form-control" />
                <span asp-validation-for="ComponyAddress" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoardOfDirectorsId" class="control-label"></label>
                <select asp-for="BoardOfDirectorsId" id="BoardOfDirectorsId" class="js-example-basic-single form-select" asp-items="@(ViewData["boardOfDirectors"] as SelectList)">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" id="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("submit").addEventListener("click", function (event) {
            const BoardOfDirectorsId = document.getElementById("BoardOfDirectorsId");

            if (BoardOfDirectorsId.value === "") {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: "error",
                    title: "خطئ....",
                    text: "رجاء أختر مجلس الادارة",
                });
            }
        });
    </script>
}
