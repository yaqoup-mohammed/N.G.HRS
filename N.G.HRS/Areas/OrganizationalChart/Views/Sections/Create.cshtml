@model N.G.HRS.Areas.OrganizationalChart.Models.Sections
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}

<h1>Create</h1>

<h4>Sections</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SectionsName" class="control-label"></label>
                <input asp-for="SectionsName" class="form-control" />
                <span asp-validation-for="SectionsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentsId" class="control-label"></label>
                <select asp-for="DepartmentsId" class="js-example-basic-single form-select" asp-items="@(ViewData["Departments"] as SelectList)">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("submit").addEventListener("click", function (event) {
            const branches = document.getElementById("branches");

            if (branches.value === "") {
                event.preventDefault(); // Prevent form submission
                Swal.fire({
                    icon: "error",
                    title: "خطئ....",
                    text: "رجاء أختر  الادارة!",
                });
            }
        });
    </script>
}
